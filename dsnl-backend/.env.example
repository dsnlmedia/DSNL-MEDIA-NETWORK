# DSNL Backend Environment Variables
# ===================================
# IMPORTANT: Copy this file to .env and replace all placeholder values
# with your actual secure credentials. Never commit .env files to version control.

# Server Configuration
# --------------------
PORT=5001
NODE_ENV=development

# Database Configuration
# ----------------------
# MongoDB connection string
# Development: mongodb://localhost:27017/dsnl_content
# Production: mongodb+srv://username:password@cluster.mongodb.net/dsnl_content
MONGODB_URI=mongodb://localhost:27017/dsnl_content

# JWT Security Configuration
# --------------------------
# CRITICAL: Generate a strong, unique JWT secret (minimum 32 characters)
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Or: openssl rand -hex 64
JWT_SECRET=generate_a_very_long_secure_random_string_minimum_32_characters_recommended_64
JWT_EXPIRE=24h

# API Configuration
# -----------------
API_BASE_URL=http://localhost:5001

# Admin User Configuration
# ------------------------
# IMPORTANT: Change these default credentials immediately!
# Use strong passwords (minimum 12 characters, mix of letters, numbers, symbols)
ADMIN_USERNAME=your_secure_admin_username
ADMIN_PASSWORD=your_very_secure_password_12+_chars
ADMIN_EMAIL=your-admin@your-domain.com

# File Upload Configuration
# -------------------------
# Maximum file size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads

# Security Configuration
# ----------------------
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=another_very_long_secure_random_string_for_sessions

# Email Configuration (Optional)
# ------------------------------
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_USER=your-email@your-domain.com
# SMTP_PASS=your-email-password
# FROM_EMAIL=noreply@your-domain.com

# Debug Configuration
DEBUG=false
